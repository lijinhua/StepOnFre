<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corusen.steponfre"
    android:installLocation="auto"
    android:versionCode="131"
    android:versionName="1.3.1" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@drawable/icon"
        android:label="@string/app_name_te"
        android:name=".base.AnalyticsSampleApp"
        android:theme="@style/mycustomethemes" >
        <service android:name=".base.AccuService" />

        <receiver android:name=".base.AccuServiceAlarmReceiver" >
            <intent-filter>
                <action android:name="com.corusen.steponfre.ACCUPEDO_SERVICE_RESTART_ALARM" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".base.PedoWidget4"
            android:label="@string/app_name4_te" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_pedo_provider4" />
        </receiver>

        <activity
            android:name=".base.Pedometer"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name_te"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".base.Settings"
            android:finishOnTaskLaunch="true"
            android:label="@string/settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.chart.ChartActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/chart"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.chart.StatisticsActivity"
            android:label="@string/chart"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.database.History"
            android:finishOnTaskLaunch="true"
            android:label="@string/history"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.database.DetailHistory"
            android:label="@string/lap"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".base.ActivityShareTabs"
            android:label="@string/share"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".base.ActivityBackup"
            android:label="@string/backup"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".base.ActivityHistoryEditsteps"
            android:label="@string/editsteps"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- AdMob and Other -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <!-- FaceBook -->
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_facebook_te_id" />
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name_te" />
        <receiver android:name="com.corusen.steponfre.base.HelloFacebookBroadcastReceiver">
            <intent-filter>
                <action android:name="com.facebook.platform.AppCallResultBroadcast" />
            </intent-filter>
        </receiver>

    </application>

</manifest>