<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/mygray"
                android:startColor="@color/mygray"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/mylightgray" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="10dp"
                android:right="2dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/mydarkorange"
                android:startColor="@color/myorange"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/myddarkorange" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="10dp"
                android:right="2dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/mylightgray"
                android:startColor="@color/mygray"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/myddarkgray" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="10dp"
                android:right="2dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
