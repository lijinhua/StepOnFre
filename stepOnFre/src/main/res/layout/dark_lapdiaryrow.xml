<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lineItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mydarkgray"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/myblack"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lap"
            android:textColor="@color/mywhite"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/mLap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/mywhite"
            android:textSize="@dimen/text_xlarge" />

        <TextView
            android:id="@+id/mStarttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textColor="@color/mywhite"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp" >

        <ImageView
            android:id="@+id/image_exercise"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/walk_ic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp" >

        <TextView
            android:id="@+id/mSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textColor="@color/mywhite"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/mCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/mywhite"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_col"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/widget_st"
            android:textColor="@color/mylightgray"
            android:textSize="@dimen/text_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="4dp"
            android:text="@string/widget_cal"
            android:textColor="@color/mylightgray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="16dp" >

        <TextView
            android:id="@+id/mDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textColor="@color/mylightgray"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/mSteptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textColor="@color/mylightgray"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="16dp" >

        <TextView
            android:id="@+id/distance_unit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/widget_mi"
            android:textColor="@color/mylightgray"
            android:textSize="@dimen/text_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="4dp"
            android:text="@string/hm"
            android:textColor="@color/mylightgray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

</LinearLayout>