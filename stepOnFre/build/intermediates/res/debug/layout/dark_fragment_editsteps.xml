<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/myddarkgray"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="@string/enter_manual_steps"
   	    android:textColor="@color/myllightgray"
   	    android:textSize="@dimen/title_20"
   	    android:layout_marginBottom="10dp"
        android:id="@+id/editste" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np1"
            android:clickable="false"
            android:layout_gravity="center_vertical"/>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np2"
            android:clickable="false"
            android:layout_gravity="center_vertical"/>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np3"
            android:clickable="false"
            android:layout_gravity="center_vertical"/>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np4"
            android:clickable="false"
            android:layout_gravity="center_vertical"/>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np5"
            android:clickable="false"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	 	android:orientation="horizontal" 
	 	android:paddingLeft="10dip"
	 	android:paddingRight="10dip"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
	
	    <Button
	        android:id="@+id/btn_reset"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/reset"
            android:layout_marginRight="16dp" />

       <Button
	        android:id="@+id/btn_set_steps"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/button_manual_steps"/>
	</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout><!-- From: file:/Users/John1/Documents/2015/Android/workspace_studio/StepOnFre/stepOnFre/src/main/res/layout/dark_fragment_editsteps.xml -->