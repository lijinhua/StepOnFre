<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/mywhite"
                android:startColor="@color/mywhite"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/mywhite" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="6dp"
                android:right="2dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/mylightorange"
                android:startColor="@color/myorange"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@null" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="6dp"
                android:right="2dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@null"
                android:centerColor="@null"
                android:centerY="0.9"
                android:endColor="@color/myorange"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@null" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="2dp"
                android:top="6dp"
                android:right="2dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>
