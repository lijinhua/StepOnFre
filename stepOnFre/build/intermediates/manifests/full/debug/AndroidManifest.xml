<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corusen.steponfre"
    android:installLocation="auto"
    android:versionCode="131"
    android:versionName="1.3.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" /> <!-- Permissions required for GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="com.corusen.steponfre.base.AnalyticsSampleApp"
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@drawable/icon"
        android:label="@string/app_name_te"
        android:theme="@style/mycustomethemes" >
        <service android:name="com.corusen.steponfre.base.AccuService" />

        <receiver android:name="com.corusen.steponfre.base.AccuServiceAlarmReceiver" >
            <intent-filter>
                <action android:name="com.corusen.steponfre.ACCUPEDO_SERVICE_RESTART_ALARM" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.corusen.steponfre.base.PedoWidget4"
            android:label="@string/app_name4_te" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_pedo_provider4" />
        </receiver>

        <activity
            android:name="com.corusen.steponfre.base.Pedometer"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name_te"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.corusen.steponfre.base.Settings"
            android:finishOnTaskLaunch="true"
            android:label="@string/settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.chart.ChartActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/chart"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.chart.StatisticsActivity"
            android:label="@string/chart"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.database.History"
            android:finishOnTaskLaunch="true"
            android:label="@string/history"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.database.DetailHistory"
            android:label="@string/lap"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.base.ActivityShareTabs"
            android:finishOnTaskLaunch="true"
            android:label="@string/share"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.base.ActivityBackup"
            android:finishOnTaskLaunch="true"
            android:label="@string/backup"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.base.ActivityHistoryEditsteps"
            android:label="@string/editsteps"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- AdMob and Other -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <!-- FaceBook -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_facebook_te_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name_te"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <receiver android:name="com.corusen.steponfre.base.HelloFacebookBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.facebook.platform.AppCallResultBroadcast" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />
        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.google.android.gms.measurement.AppMeasurementContentProvider"
            android:authorities="com.corusen.steponfre.google_measurement_service"
            android:exported="false" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>