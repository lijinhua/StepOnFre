<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corusen.steponfre"
    android:installLocation="auto"
    android:versionCode="125"
    android:versionName="1.2.5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:name="com.corusen.steponfre.AnalyticsSampleApp"
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/mycustomethemes" >
        <service android:name="com.corusen.steponfre.AccuService" />

        <receiver android:name="com.corusen.steponfre.AccuServiceAlarmReceiver" >
            <intent-filter>
                <action android:name="com.corusen.steponfre.ACCUPEDO_SERVICE_RESTART_ALARM" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.corusen.steponfre.PedoWidget4"
            android:label="@string/app_name4" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_pedo_provider4" />
        </receiver>

        <activity
            android:name="com.corusen.steponfre.Pedometer"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.corusen.steponfre.Settings"
            android:finishOnTaskLaunch="true"
            android:label="@string/settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.chart.ChartActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/chart"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.chart.StatisticsActivity"
            android:label="@string/chart"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.database.History"
            android:finishOnTaskLaunch="true"
            android:label="@string/history"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.database.DetailHistory"
            android:label="@string/lap"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.ActivityShareTabs"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.ActivityBackupTabs"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.corusen.steponfre.ActivityHistoryEditsteps"
            android:label="@string/editsteps"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name="com.corusen.steponfre.AuthorizationComplete" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.inmobi.androidsdk.IMBrowserActivity"
            android:configChanges="keyboardHidden|orientation|keyboard|smallestScreenSize|screenSize"
            android:hardwareAccelerated="true" />
    </application>

</manifest>